{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Cly",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#support" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cly",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cly",
          "match": "\\b(if|else|for|in|while|break|continue|return)\\b"
        },
        {
          "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.cly" },
            "2": { "name": "entity.name.type.cly" }
          }
        },
        {
          "name": "storage.type.cly",
          "match": "\\b(function|const|mut)\\b"
        },
        {
          "name": "constant.language.cly",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cly",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cly",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.cly",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [{ "include": "#expressions" }]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.cly",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.cly",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.luna.cly",
          "match": "\\bluna_v1_[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.function.cly",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.cly",
          "match": "(\\+|-|\\*|/|%|==|!=|<=|>=|<|>|&&|\\|\\||!|=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "punctuation.separator.cly",
          "match": "[,;:\\.]"
        },
        {
          "name": "punctuation.bracket.cly",
          "match": "[\\(\\)\\[\\]\\{\\}]"
        }
      ]
    },
    "support": {
      "patterns": [
        {
          "name": "variable.parameter.cly",
          "match": "\\b(dt|time|row|col)\\b"
        }
      ]
    },
    "expressions": {
      "patterns": [
        { "include": "#keywords" },
        { "include": "#numbers" },
        { "include": "#strings" },
        { "include": "#builtins" },
        { "include": "#operators" },
        { "include": "#support" }
      ]
    }
  },
  "scopeName": "source.cly"
}
